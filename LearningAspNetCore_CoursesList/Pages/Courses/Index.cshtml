                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Courses.FirstOrDefault().Description)
                </th>
            </tr>
            @foreach (var course in Model.Courses)
            {
                <tr>
                    <td>
                        @course.Name
                    </td>
                    <td>
                        @course.Author
                    </td>
                    <td>
                        @course.Description
                    </td>
                </tr>
            }
        </table>
    </div>
}
else
{
    <h1>Zero courses avaible</h1>
}